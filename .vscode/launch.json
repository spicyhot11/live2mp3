{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend (CodeLLDB)",
            "type": "lldb", // 这里改为 lldb
            "request": "launch",
            "program": "${workspaceFolder}/bin/live2mp3",
            "cwd": "${workspaceFolder}/bin",
            "preLaunchTask": "Build & Setup (Debug)"
        },
        {
            "name": "Debug Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            },
            "presentation": {
                "hidden": false
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": [
                "Debug Backend (CodeLLDB)",
                "Debug Frontend (Chrome)"
            ],
            "presentation": {
                "group": "group1",
                "order": 1
            }
        }
    ]
}