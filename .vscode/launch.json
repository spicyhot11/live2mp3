{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb/lldb) Launch Backend",
            "type": "cppdbg",
            "request": "launch",
            // 更新为新的 bin 目录
            "program": "${workspaceFolder}/bin/live2mp3",
            "args": [],
            "stopAtEntry": false,
            // 调试时的工作目录设为 bin/，这样能找到 config.json
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // 使用我们新定义的聚合任务，确保配置被复制
            "preLaunchTask": "Build & Setup",
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "Debug Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": [
                "(gdb/lldb) Launch Backend",
                "Debug Frontend (Chrome)"
            ]
        }
    ]
}