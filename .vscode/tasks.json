{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Conan Install (Debug)",
            "type": "shell",
            "command": "conan install . --output-folder=build --build=missing -s build_type=Debug",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build"
        },
        {
            "label": "2. CMake Configure",
            "type": "shell",
            "command": "cmake -S . -B build -DCMAKE_TOOLCHAIN_FILE=build/conan_toolchain.cmake -DCMAKE_BUILD_TYPE=Debug",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "dependsOn": [
                "1. Conan Install (Debug)"
            ],
            "group": "build"
        },
        {
            "label": "3. Build Backend (Debug)",
            "type": "shell",
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "dependsOn": [
                "2. CMake Configure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}